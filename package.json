{
  "name": "simpless",
  "version": "1.0.9",
  "description": "Simple wrapper around esformatter to beautify javascript files overriding the content of the files",
  "main": "index.js",
  "scripts": {
    "beautify": "esbeautifier -u './index.js' './lib/**/*.js' './specs/**/*.js' './src/**/*.js'",
    "beautify-check": "esbeautifier -u -k './index.js' './lib/**/*.js' './specs/**/*.js' './src/**/*.js'",
    "eslint": "eslinter -u './index.js' './lib/**/*.js' './specs/**/*.js' './src/**/*.js'",
    "lint": "npm run beautify && npm run eslint",
    "test": "mocha-runner './specs/**/*.js'",
    "cover": "istanbul cover -x specs/**/*.js mocha-runner './specs/**/*.js' html text-summary",
    "watch": "watch-spawn -i -p npm run cover",
    "check": "npm run beautify-check && npm run eslint",
    "prepush": "npm run check && npm run test",
    "changelog": "changelogx -f markdown -o ./changelog.md",
    "install-hooks": "prepush install && changelogx install-hook",
    "bump": "bumpery --verify='npm run check'"
  },
  "bin": {
    "simpless": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/royriojas/simpless"
  },
  "license": "MIT",
  "author": "Roy Riojas (http://royriojas.com)",
  "prepush": [
    "npm run check"
  ],
  "devDependencies": {
    "bumpery": "^1.0.7",
    "changelogx": "^1.0.13",
    "esbeautifier": "^3.1.3",
    "eslinter": "^2.0.1",
    "istanbul": "^0.3.17",
    "mocha-runner": "^1.0.8",
    "prepush": "^2.0.4",
    "proxyquire": "^1.6.0",
    "read-file": "^0.1.2",
    "watch-spawn": "^1.0.3",
    "write": "^0.2.0"
  },
  "dependencies": {
    "autoprefixer-core": "^5.2.0",
    "chokidar": "^1.0.3",
    "clix": "^1.1.2",
    "csso": "^1.3.11",
    "debouncy": "^1.0.4",
    "dispatchy": "^1.0.2",
    "es6-promise": "^2.1.1",
    "esbeautifier": "^3.1.3",
    "eslinter": "^2.0.1",
    "extend": "^2.0.1",
    "fs-extra": "^0.18.4",
    "glob-expand": "^0.1.0",
    "less": "^2.5.1",
    "less-plugin-glob": "^1.1.0",
    "less-plugin-inline-urls": "^1.1.0",
    "postcss": "^4.1.11",
    "stringformat": "0.0.5"
  },
  "changelogx": {
    "ignoreRegExp": [
      "BLD: Release",
      "DOC: Generate Changelog",
      "Generated Changelog",
      "REF: formatted missing files"
    ],
    "issueIDRegExp": "#(\\d+)",
    "commitURL": "https://github.com/royriojas/simpless/commit/{0}",
    "authorURL": "https://github.com/{0}",
    "issueIDURL": "https://github.com/royriojas/simpless/issues/{0}",
    "projectName": "simpless"
  },
  "bugs": {
    "url": "https://github.com/royriojas/simpless/issues"
  },
  "homepage": "https://github.com/royriojas/simpless",
  "keywords": [
    "less compiler",
    "css concact",
    "move relative resources to the output folder"
  ]
}
